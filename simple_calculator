def calculate(num1, sign, num2):
    if sign == "+":
        return num1 + num2
    elif sign == "-":
        return num1 - num2
    elif sign == "*":
        return num1 * num2
    elif sign == "/":
        return num1 / num2
    else:
        return ("Invalid Operator")

result = calculate(float(input("Enter a number: ")),
                 (input("Enter a sign: ")), 
                 float(input("Enter a number: ")))

print(result)

